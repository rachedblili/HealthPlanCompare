# Health Plan Comparison Tool - Environment Configuration
# Copy this to .env for local development

# =============================================================================
# SECURITY WARNING: 
# Only use local LLM mode for local development!
# Never deploy with ENABLE_LOCAL_LLM=true to public hosting!
# =============================================================================

# LLM Operation Mode
# server = Use serverless functions (secure for public deployment) 
# local = Use browser API calls (local development only)
# hybrid = Try local first, fallback to server
LLM_MODE=server

# Enable Local LLM Features (SECURITY RISK if deployed publicly)
# Set to 'true' only for local development
ENABLE_LOCAL_LLM=false

# =============================================================================
# Local Development API Keys (only used when ENABLE_LOCAL_LLM=true)
# WARNING: These keys will be exposed in the browser!
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
DEFAULT_OPENAI_MODEL=gpt-4o-mini

# Anthropic Configuration  
ANTHROPIC_API_KEY=your_anthropic_api_key_here
DEFAULT_ANTHROPIC_MODEL=claude-3-haiku-20240307

# LLM Settings
DEFAULT_LLM_PROVIDER=openai
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=2000

# Legacy Settings
ENABLE_LLM=true
AUTO_OFFER_LLM=true