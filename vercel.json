{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "functions": {
    "api/analyze-pdf.js": {
      "maxDuration": 30
    },
    "api/generate-insights.js": {
      "maxDuration": 20
    },
    "api/generate-summary.js": {
      "maxDuration": 15
    }
  },
  "env": {
    "OPENAI_API_KEY": "@openai-api-key",
    "ANTHROPIC_API_KEY": "@anthropic-api-key",
    "DEFAULT_OPENAI_MODEL": "gpt-4o-mini",
    "DEFAULT_ANTHROPIC_MODEL": "claude-3-haiku-20240307",
    "NODE_ENV": "production"
  }
}